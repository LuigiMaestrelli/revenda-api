{
    "name": "revenda-api",
    "version": "0.0.1",
    "description": "Back-end for Revenda app",
    "main": "index.js",
    "author": "Luigi Maestrelli",
    "license": "MIT",
    "scripts": {
        "build": "rimraf ./dist && tsc -p tsconfig.build.json",
        "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
        "test:unit": "yarn test -c jest-unit.config.js",
        "test:integration": "yarn test -c jest-integration.config.js",
        "test:staged": "yarn test --findRelatedTests",
        "test:ci": "yarn test --coverage --verbose",
        "prettier": "prettier --write \"**/*.ts\"",
        "lint": "eslint --ext .ts .",
        "prepare": "husky install"
    },
    "engines": {
        "node": "15.x"
    },
    "_moduleAliases": {
        "@": "dist"
    },
    "jestSonar": {
        "reportFile": "./coverage/test-reporter.xml",
        "indent": 4
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "dotenv": "^8.2.0",
        "module-alias": "^2.2.2",
        "pg": "^8.5.1",
        "pg-hstore": "^2.3.3",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.6.2",
        "uuid": "^8.3.2",
        "validator": "^13.5.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.1",
        "@types/faker": "^5.5.1",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@types/sequelize": "^4.28.9",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.0",
        "@types/validator": "^13.1.3",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "cpy-cli": "^3.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.24.0",
        "eslint-config-standard-with-typescript": "^20.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-standard": "^5.0.0",
        "faker": "^5.5.3",
        "git-commit-msg-linter": "^3.1.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jest-sonar-reporter": "^2.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "sequelize-cli": "^6.2.0",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.4"
    }
}
