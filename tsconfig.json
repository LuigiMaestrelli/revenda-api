{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./src",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "paths": {
            "@/*": ["*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src", "./__test__"]
}
